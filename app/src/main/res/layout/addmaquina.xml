<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/idBuscar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#4CAF50"
        android:contentDescription="@string/app_name"
        android:scaleType="center"
        android:text="Afegir Màquina"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <EditText
        android:id="@+id/etNom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:hint="Nom Client"
        android:inputType="text" />
    <EditText
        android:id="@+id/etDir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:hint="Direcció"
        android:inputType="text" />
    <EditText
        android:id="@+id/etCodiPostal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:hint="Codi Postal"
        android:inputType="number" />
    <EditText
        android:id="@+id/etPoblacio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:hint="Població"
        android:inputType="text" />
    <EditText
        android:id="@+id/etTelefon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:hint="Telefon"
        android:inputType="text" />
    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:hint="E-mail"
        android:inputType="textEmailAddress" />
    <EditText
        android:id="@+id/etNumSer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:hint="Número de serie"
        android:inputType="text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewData"
            android:layout_width="89dp"
            android:layout_height="63dp"
            app:srcCompat="@drawable/pngegg" />

        <EditText
            android:id="@+id/etData"
            android:layout_width="244dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:hint="Data última revisió"
            android:inputType="text" />

    </LinearLayout>

    <TextView
        android:id="@+id/etTipus"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:hint="Tipus" />

    <Spinner
        android:id="@+id/TipusSpinner"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvZona"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:hint="Zona" />

    <Spinner
        android:id="@+id/ZonaSpinner"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnCancelar"
            android:layout_width="145dp"
            android:layout_height="100dp"
            android:text="Button" />

        <ImageView
            android:id="@+id/btnvacio"
            android:layout_width="112dp"
            android:layout_height="100dp"
            android:text="Button" />
        <ImageView
            android:id="@+id/btnAceptar"

            android:layout_width="148dp"
            android:layout_height="100dp"
            android:text="Button" />

    </LinearLayout>


</LinearLayout>

    </ScrollView>