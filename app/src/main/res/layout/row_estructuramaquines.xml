<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_container1"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/my_layout3"
        android:layout_width="wrap_content"
        android:layout_height="264dp"
        android:background="#393736"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgTlf"
            android:layout_width="51dp"
            android:layout_height="128dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="9dp"
            app:srcCompat="@drawable/tlficon" />

        <ImageView
            android:id="@+id/imgEmail"
            android:layout_width="51dp"
            android:layout_height="116dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="9dp"
            app:srcCompat="@drawable/iconemail" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_layout2"
        android:layout_width="291dp"
        android:layout_height="wrap_content"
        android:background="#FFEB3B"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#CDDC39"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:background="#00BCD4"
                android:text="ID: "
                android:textSize="18sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/lblId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#CDDC39"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:background="#00BCD4"
                android:text="Nom client: "
                android:textSize="18sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/lblNomCli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#CDDC39"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:background="#00BCD4"
                android:text="Adreça: "
                android:textSize="18sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/lblAdreça"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#CDDC39"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:background="#00BCD4"
                android:text="Codi postal: "
                android:textSize="18sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/lblCodiPostal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#CDDC39"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:background="#00BCD4"

                android:text="Població: "
                android:textSize="18sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/lblPobla"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#CDDC39"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:background="#00BCD4"

                android:text="Telefon: "
                android:textSize="18sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/lblTlf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#CDDC39"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:background="#00BCD4"

                android:text="E-mail: "
                android:textSize="18sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/lblEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#CDDC39"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:background="#00BCD4"

                android:text="Número Serie: "
                android:textSize="18sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/lblNumSer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#CDDC39"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:background="#00BCD4"

                android:text="Data última revisió: "
                android:textSize="18sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/lblDataUR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#CDDC39"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:background="#00BCD4"

                android:text="Tipus: "
                android:textSize="18sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/lblTipus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#CDDC39"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:background="#00BCD4"

                android:text="Zona: "
                android:textSize="18sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/lblZona"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="264dp"
        android:background="#393736"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgMaps"
            android:layout_width="55dp"
            android:layout_height="124dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="9dp"
            app:srcCompat="@drawable/iconmapslist" />

        <ImageView
            android:id="@+id/imgdelete123"
            android:layout_width="55dp"
            android:layout_height="113dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="9dp"
            app:srcCompat="@drawable/tde" />
    </LinearLayout>
</LinearLayout>





